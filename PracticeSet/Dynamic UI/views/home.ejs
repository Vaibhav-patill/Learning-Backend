<%- include('partials/head') %>
</head>
<body>
  <%- include('partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Here are our registered homes:
    </h2>
    <div class="grid grid-cols-1 gap-6">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
          <img src="https://images.barrons.com/im-85242/social" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.houseName %></h3>
            <p class="text-gray-600 mb-2">Location: <span class="font-medium"><%= home.location %></span></p>
            <p class="text-gray-600 mb-2">Price: <span class="font-medium">₹<%= home.price %></span></p>
            <p class="text-gray-600">Rating: 
              <span class="font-medium text-yellow-500">
                <%= '★'.repeat(home.rating) %><%= '☆'.repeat(5 - home.rating) %>
              </span>
            </p>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>